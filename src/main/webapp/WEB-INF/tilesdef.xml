 	<definition name="admin_login_form" template="/WEB-INF/jsp/tiles_layouts/layout_blank.jsp">
		<put-attribute name="admin_content" value="/WEB-INF/jsp/planB/admin/auth/LoginVm.jsp" type="template"/>
	</definition>
	
	<definition name="admin_index" template="/WEB-INF/jsp/tiles_layouts/layout_admin.jsp">
		<put-attribute name="admin_header" value="/WEB-INF/jsp/tiles_template/admin_header.jsp" type="template"/>
		<put-attribute name="admin_menu" value="/WEB-INF/jsp/tiles_template/admin_menu.jsp" type="template"/>
		<put-attribute name="admin_content" value="/WEB-INF/jsp/planB/admin/index.jsp" type="template"/>
		<put-attribute name="admin_footer" value="/WEB-INF/jsp/tiles_template/admin_footer.jsp" type="template"/>
		<put-attribute name="admin_control_sidebar" value="/WEB-INF/jsp/tiles_template/admin_control_sidebar.jsp" type="template"/>
	</definition>
	
	<definition name="admin_template" template="/WEB-INF/jsp/tiles_layouts/layout_admin.jsp">
		<put-attribute name="admin_header" value="/WEB-INF/jsp/tiles_template/admin_header.jsp" type="template"/>
		<put-attribute name="admin_menu" value="/WEB-INF/jsp/tiles_template/admin_menu.jsp" type="template"/>
		<put-attribute name="admin_content" value="" type="template"/>
		<put-attribute name="admin_footer" value="/WEB-INF/jsp/tiles_template/admin_footer.jsp" type="template"/>
		<put-attribute name="admin_control_sidebar" value="/WEB-INF/jsp/tiles_template/admin_control_sidebar.jsp" type="template"/>
	</definition>
	
	<definition name="admin_error" extends="admin_template">
		<put-attribute name="admin_content" value="/WEB-INF/jsp/planB/common/error.jsp" type="template"/>
	</definition>
	
	<definition name="*/admin/*/*" extends="admin_template">
		<put-attribute name="admin_content" value="/WEB-INF/jsp/{1}/admin/{2}/{3}.jsp" type="template"/>
	</definition>
	
	<definition name="*/admin/*/*/*" extends="admin_template">
		<put-attribute name="admin_content" value="/WEB-INF/jsp/{1}/admin/{2}/{3}/{4}.jsp" type="template"/>
	</definition>
	
	<definition name="*/admin/*/*/*/*" extends="admin_template">
